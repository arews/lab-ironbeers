<div class="random-beer-container">
    <img class="beer-image" src="{{image_url}}" alt="">
    <div class="beer-text">
        <h1>{{name}}</h1>
        <h2 class="tagline">{{tagline}}</h2>
        <p>{{description}}</p>
        <div class="food-pairings">
            <h3>Food Pairing</h3>
            <ul>
                {{#each food_pairing }}
                <li> {{this}}</li>
                {{/each}}
            </ul>
        </div>
        <div class="brewer-tips"><span>Brewers Tips: </span>{{brewers_tips}}</div>
    </div>

</div>